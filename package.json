{
  "name": "simple-bible-reader",
  "version": "1.0.0",
  "description": "What I want a Bible reader to be.",
  "main": "index.js",
  "scripts": {
    "ci:test": "npm run create-symlinks && npm t",
    "test": "tape -r reify client/**/*-test.js",
    "prep-build": "run-p create-symlinks glob generate:*",
    "build": "npm-run-all prep-build --parallel build:*",
    "build:js": "rollup -c rollup.config.js",
    "watch:js": "rollup -c -w --dev",
    "watch:glob": "watch \"npm run glob\" client/service client/view",
    "generate:books": "node generation-scripts/generate-books-for-display/index.js",
    "glob": "run-p glob:*",
    "glob:services": "glob-module-file --pattern=\"client/service/**/*.js\" --format=es --pathPrefix=../ --outputPath=client/globbed-services.js",
    "glob:views": "glob-module-file --pattern=\"client/view/**/*.js\" --format=es --pathPrefix=../ --outputPath=client/globbed-views.js",
    "create-symlinks": "del-cli client/node_modules && make-dir client/node_modules/ && cd client/node_modules && symlink ../component/ component && symlink ../lib/ lib && cd ../../",
    "build:css": "postcss-alt \"client/view/**/*.css\" \"public/build/style.css\"",
    "watch:css": "postcss-alt \"client/view/**/*.css\" \"public/build/style.css\" --watch=\"client/**/*.css\"",
    "serve": "node server/index.js",
    "dev": "cross-env NODE_ENV=development npm-run-all prep-build --parallel watch:* serve",
    "start": "node server/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TehShrike/simple-bible-reader.git"
  },
  "keywords": [
    "bible",
    "book",
    "reader",
    "canon"
  ],
  "author": "TehShrike",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/TehShrike/simple-bible-reader/issues"
  },
  "homepage": "https://github.com/TehShrike/simple-bible-reader#readme",
  "devDependencies": {
    "key-master": "^3.1.0",
    "reify": "^0.13.7",
    "watch": "1.0.2"
  },
  "dependencies": {
    "abstract-state-router": "6.0.4",
    "asr-scroll-position": "1.1.0",
    "autoprefixer": "7.2.5",
    "books-of-the-bible": "^1.1.0",
    "chromatism2": "3.0.2",
    "click-should-be-intercepted-for-navigation": "^1.0.0",
    "cross-env": "5.1.3",
    "del-cli": "^1.1.0",
    "glob-module-file": "2.2.0",
    "hash-brown-router": "^3.4.0",
    "iso-next-tick": "1.0.0",
    "just-range": "2.0.0",
    "just-to-string": "1.0.0",
    "koa": "^2.5.0",
    "koa-bestest-router": "^1.0.2",
    "koa-compress": "^2.0.0",
    "koa-conditional-get": "^2.0.0",
    "koa-etag": "^3.0.0",
    "koa-send": "^4.1.3",
    "make-dir": "1.2.0",
    "make-dir-cli": "^1.0.0",
    "mannish": "3.2.0",
    "multi-part-range-compare": "1.0.3",
    "npm-run-all": "4.1.2",
    "pify": "3.0.0",
    "postcss": "^6.0.19",
    "postcss-advanced-variables": "^2.3.3",
    "postcss-alt-cli": "1.0.1",
    "precss": "3.1.0",
    "regex-fun": "2.0.2",
    "revelation": "2.0.7",
    "rollup": "0.55.1",
    "rollup-plugin-commonjs": "8.3.0",
    "rollup-plugin-json": "2.3.0",
    "rollup-plugin-node-resolve": "3.0.2",
    "rollup-plugin-svelte": "4.1.0",
    "rollup-plugin-visualizer": "^0.3.1",
    "rollup-watch": "4.3.1",
    "sausage-router": "^1.1.2",
    "shell-tag": "1.0.1",
    "svelte": "2.13.4",
    "svelte-panel-click": "1.0.2",
    "svelte-preprocess-postcss": "1.0.0",
    "svelte-querystring-router": "1.7.0",
    "svelte-state-renderer": "2.0.0",
    "symlink-cli": "1.0.0",
    "tape": "4.8.0",
    "tempy": "0.2.1",
    "verse-reference-regex": "1.3.0",
    "world-english-bible": "1.0.0"
  }
}
